<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
>
	<!--<View-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="@dimen/workflow_card_offset"-->
		<!--android:background="@drawable/card_top_fade"-->
	<!--/>-->

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		app:cardPreventCornerOverlap="true"
		app:cardCornerRadius="20dp"
		app:cardElevation="12dp"
		android:layout_gravity="center"
	>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/module_image"
			android:alpha="0.15"
		/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="18dp"
			android:paddingRight="18dp"
			android:layout_marginTop="-8dp"
			android:layout_gravity="center"
		>
			<TextView
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:id="@+id/module"
				android:text="1"
				android:gravity="center"
				android:textColor="#ffffff"
				android:textStyle="bold"
				android:textSize="24dp"
				android:background="@drawable/circle_bg_drawable"
				android:backgroundTint="@color/colorPrimary"
			/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/chevron"
				android:src="@drawable/chevron_expand"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
			/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/name"
				android:layout_centerVertical="true"
				android:textSize="22sp"
				android:textColor="#ff000000"
				android:textStyle="bold"
				android:text="Preparedness"
				android:layout_toLeftOf="@id/chevron"
				android:layout_toRightOf="@id/module"
				android:layout_marginLeft="12dp"
				android:layout_marginRight="12dp"
			/>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>
