<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
>
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		app:cardPreventCornerOverlap="true"
		app:cardCornerRadius="20dp"
		app:cardElevation="12dp"
		android:layout_gravity="center"
	>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="156dp"
			android:src="@drawable/module_image"
			android:alpha="0.15"
		/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="156dp"
				android:paddingLeft="18dp"
				android:paddingRight="18dp"
				android:layout_marginTop="-8dp"
				android:layout_gravity="center"
			>
				<TextView
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:id="@+id/module"
					android:text="1"
					android:gravity="center"
					android:textColor="#ffffff"
					android:textStyle="bold"
					android:textSize="24dp"
					android:background="@drawable/circle_bg_drawable"
					android:backgroundTint="@color/colorPrimary"
					android:layout_centerVertical="true"
				/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/chevron"
					android:src="@drawable/chevron_expand"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
				/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/name"
					android:layout_centerVertical="true"
					android:textSize="22sp"
					android:textColor="#ff000000"
					android:textStyle="bold"
					android:text="Preparedness"
					android:layout_toLeftOf="@id/chevron"
					android:layout_toRightOf="@id/module"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/name"
					android:layout_toRightOf="@id/module"
					android:layout_marginLeft="12dp"
					android:layout_marginTop="12dp"
					android:text="Module Roadmap"
					android:visibility="gone"
				/>
			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/step_container"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				android:paddingTop="12dp"
				android:background="#ffffff"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2.1 Planning &amp; Preparation"
					android:layout_marginLeft="18dp"
					android:layout_marginRight="12dp"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:layout_marginLeft="18dp"
					android:layout_marginRight="12dp"
					android:text="Roadmap"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/substep_container"
					android:orientation="vertical"
					android:showDividers="middle"
					android:divider="@drawable/sub_step_divider"
					android:background="#FAFAFB"
					android:paddingLeft="18dp"
					android:layout_marginTop="12dp"
				>
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="12dp"
						android:paddingBottom="12dp"
						android:paddingRight="18dp"
					>
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/chevron"
							android:src="@drawable/chevron_expand"
							android:layout_centerVertical="true"
							android:layout_alignParentRight="true"
							android:layout_alignParentEnd="true"
						/>

						<CheckBox
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/check"
							android:layout_centerVertical="true"
						/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/title"
							android:layout_toLeftOf="@id/chevron"
							android:layout_toStartOf="@id/chevron"
							android:layout_toRightOf="@id/check"
							android:layout_toEndOf="@id/check"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_centerVertical="true"
							android:text="2.1.1 Initial decision For Cash"
						/>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>
