<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:descendantFocusability="afterDescendants"
>
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		app:cardPreventCornerOverlap="true"
		app:cardCornerRadius="20dp"
		app:cardElevation="12dp"
		android:layout_gravity="center"
	>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="156dp"
			android:id="@+id/module_image"
			android:src="@drawable/module_image"
			android:alpha="0.15"
			android:scaleType="centerCrop"
		/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="156dp"
				android:paddingLeft="24dp"
				android:paddingStart="24dp"
				android:paddingRight="16dp"
				android:paddingEnd="16dp"
				android:layout_marginTop="-24dp"
				android:layout_gravity="center"
			>
				<TextView
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:id="@+id/module_hierarchy"
					android:text="1"
					android:gravity="center"
					android:textColor="#ffffff"
					android:textStyle="bold"
					android:textSize="24dp"
					android:background="@drawable/circle_bg_drawable"
					android:backgroundTint="@color/colorPrimary"
					android:layout_centerVertical="true"
				/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/module_chevron"
					android:src="@drawable/chevron_expand"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true"
				/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/module_name"
					android:layout_centerVertical="true"
					android:textSize="22sp"
					android:textColor="#ff000000"
					android:textStyle="bold"
					android:text="Preparedness"
					android:layout_toLeftOf="@id/module_chevron"
					android:layout_toStartOf="@id/module_chevron"
					android:layout_toRightOf="@id/module_hierarchy"
					android:layout_toEndOf="@id/module_hierarchy"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/module_name"
					android:layout_toRightOf="@id/module_hierarchy"
					android:layout_toEndOf="@id/module_hierarchy"
					android:layout_marginLeft="12dp"
					android:layout_marginStart="12dp"
					android:layout_marginTop="12dp"
					android:text="Module Roadmap"
					style="@style/SmallButton"
				/>
			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/steps_container"
				android:orientation="vertical"
			>
				<!-- add steps here -->
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>
