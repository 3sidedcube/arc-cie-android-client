<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="4dp"
	android:layout_marginTop="4dp"
	android:paddingBottom="16dp"
	android:paddingLeft="48dp"
	android:paddingRight="16dp"
	android:paddingTop="16dp"
>
	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tool_check"
		android:button="@drawable/checkbox_drawable_selector"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
	/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tool_icon"
		android:layout_marginLeft="20dp"
		android:src="@drawable/ic_mime_pdf"
		app:layout_constraintStart_toEndOf="@id/tool_check"
	/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/tool_title"
		android:text="Tool title"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="20dp"
		android:textColor="#ff000000"
		android:textSize="12sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@id/tool_icon"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tool_icon"
		app:layout_constraintTop_toTopOf="@id/tool_icon"
	/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/tool_description"
		android:text="Tool Description"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="8dp"
		android:textSize="12sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tool_check"
		app:layout_constraintTop_toBottomOf="@id/tool_icon"
	/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/critical_tool"
		android:text="@string/module_tool_critical"
		android:padding="4dp"
		android:background="#E7E7E9"
		android:drawableLeft="@drawable/ic_critical_tool"
		android:drawableStart="@drawable/ic_critical_tool"
		android:drawablePadding="4dp"
		android:textSize="9dp"
		android:gravity="center_vertical"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="4dp"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@id/tool_description"
		app:layout_constraintStart_toStartOf="@id/tool_description"
		app:layout_constraintHorizontal_chainStyle="packed"
	/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/note_added"
		android:text="@string/module_tool_note"
		android:padding="4dp"
		android:background="#E7E7E9"
		android:drawableLeft="@drawable/ic_note"
		android:drawableStart="@drawable/ic_note"
		android:drawablePadding="4dp"
		android:textSize="9dp"
		android:gravity="center_vertical"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="4dp"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@id/tool_description"
		app:layout_constraintStart_toEndOf="@id/critical_tool"
		app:layout_constraintHorizontal_chainStyle="packed"
	/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/exported"
		android:text="@string/module_tool_exported"
		android:padding="4dp"
		android:background="#E7E7E9"
		android:drawableLeft="@drawable/ic_export"
		android:drawableStart="@drawable/ic_export"
		android:drawablePadding="4dp"
		android:textSize="9dp"
		android:gravity="center_vertical"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="4dp"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@id/tool_description"
		app:layout_constraintStart_toEndOf="@id/note_added"
		app:layout_constraintHorizontal_chainStyle="packed"
	/>
</android.support.constraint.ConstraintLayout>
