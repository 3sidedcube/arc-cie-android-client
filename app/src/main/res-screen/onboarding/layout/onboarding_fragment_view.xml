<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/header_image"
		android:src="@drawable/onboarding_header"
		android:adjustViewBounds="true"
	/>

	<android.support.constraint.Guideline
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/spacer"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".40"
	/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/spacer"
		app:layout_constraintTop_toTopOf="@+id/spacer"
	>
		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/root_view"
			android:paddingLeft="12dp"
			android:paddingRight="12dp"
			android:paddingBottom="12dp"
		>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/title"
				android:text="@string/onboarding_title"
				android:layout_marginTop="8dp"
				style="@style/Onboarding_Title"
			/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/onboarding_body"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="24dp"
				app:layout_constraintTop_toBottomOf="@+id/title"
				app:layout_constraintBottom_toTopOf="@+id/video_thumb"
				style="@style/Onboarding_Body"
			/>

			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/video_thumb"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintBottom_toTopOf="@id/skip"
				android:layout_marginBottom="12dp"
			>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="72dp"
					android:src="@drawable/onboarding_video_thumb"
					android:adjustViewBounds="true"
					android:layout_gravity="center_horizontal"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/video"
					android:text="@string/onboarding_video_button"
					android:layout_gravity="center_horizontal|bottom"
					android:layout_marginTop="60dp"
					style="@style/RedButton"
				/>
			</FrameLayout>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/skip"
				android:text="@string/onboarding_skip_button"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				style="@style/RedButton.Borderless"
			/>
		</android.support.constraint.ConstraintLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>
